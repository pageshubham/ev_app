<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_gray"
    android:padding="20dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/single_user_booking_icon"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_vector"/>

    <TextView
        android:id="@+id/single_user_booking_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="E-Tron charging points"
        style="@style/font_18_black_medium"
        android:layout_toEndOf="@+id/single_user_booking_icon"
        android:layout_marginStart="18dp"/>

    <ImageView
        android:id="@+id/single_user_delete_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="5dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/single_user_booking_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Available"
        style="@style/font_16_yellow_medium"
        android:layout_below="@+id/single_user_booking_icon"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/single_user_booking_kilometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km"
        style="@style/font_16_black_medium"
        android:layout_below="@+id/single_user_booking_icon"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>