<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:padding="24dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/user_contribute_back_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_24"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_contribute_title_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribute us"
            style="@style/font_18_black_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_contribute_back_icon"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/user_contribute_location_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background_border_gray"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_contribute_location_input"
                style="@style/font_18_black_medium"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.9"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Select GPS location"
                android:paddingStart="20dp"
                android:paddingEnd="0dp" />

            <ProgressBar
                android:id="@+id/user_contribute_location_progress_bar"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/user_contribute_location_icon"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/ic_location" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_contribute_image_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background_border_gray"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/user_contribute_image_input"
                style="@style/font_18_black_medium"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.9"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Upload image"
                android:paddingStart="20dp"
                android:paddingEnd="0dp" />

            <ProgressBar
                android:id="@+id/user_contribute_image_progress_bar"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/user_contribute_image_icon"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/ic_upload" />

        </LinearLayout>

        <Button
            android:id="@+id/user_contribute_add_station_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_fill_blue"
            android:text="Add station"
            android:textAllCaps="false"
            style="@style/font_18_white_medium"/>

    </LinearLayout>

</RelativeLayout>