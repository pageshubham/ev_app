<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:background="@drawable/background_fill_white"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/single_user_slot_ticket_title"
            style="@style/font_18_black_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/single_user_slot_ticket_close_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_close"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_vector"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/single_user_slot_ticket_name"
        style="@style/font_18_black_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New gen charging points"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/single_user_slot_booked_timing"
        style="@style/font_14_gray_regular"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="from 11:00 - 13:00 "
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/single_user_slot_ticket_scan_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_fill_yellow"
        android:text="Scan QR Code"
        android:textAllCaps="false"
        style="@style/font_18_white_medium"/>

    <Button
        android:id="@+id/single_user_slot_ticket_navigation_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_fill_blue"
        android:text="Start navigation"
        android:textAllCaps="false"
        style="@style/font_18_white_medium"/>

</LinearLayout>